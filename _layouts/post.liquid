---
layout: singlePage
---

<h1>{{ page.title }}</h1>
{{ page.date | date: "%Y" }}
{% if page.keynote %}
&bull; <a href="{{ site.baseurl }}/{{ page.keynote }}">Keynote</a>
{% endif %}
{% if page.powerpoint %}
&bull; <a href="{{ site.baseurl }}/{{ page.powerpoint }}">Powerpoint</a>
{% endif %}
{% if page.pdf %}
&bull; <a href="{{ site.baseurl }}/{{ page.pdf }}">PDF</a>
{% endif %}
{% if page.paper %}
&bull; <a href="{{ page.paper }}">Paper</a>
{% endif %}
{% assign abstract_text = page.abstract | default: "" | strip %}
{% if abstract_text != "" %}
<br>
<div style="margin: 1.5rem 0; height: 2px; border-radius: 999px; background-color: rgba(90, 90, 90, 0.8);"></div>
<div style="padding: 0 1.25rem; margin: 0 1.25rem;">
  <md-block style="text-align: justify; margin: 0;">
  <b>Abstract.</b> {{ abstract_text }}
  </md-block>
</div>
{% else %}
<br>
<div style="margin-bottom: 1.25rem;"></div>
{% endif %}

<div style="display: flex; flex-direction: column; height: 90vh;">
<div style="flex: 1 1 auto;">
  <object
    data="{{ site.baseurl }}/{{ page.pdf }}"
    type="application/pdf"
    width="100%"
    height="100%"
  ></object>
</div>
